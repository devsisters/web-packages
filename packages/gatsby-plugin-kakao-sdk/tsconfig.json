{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "outDir": ".",
    "rootDir": "src",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
