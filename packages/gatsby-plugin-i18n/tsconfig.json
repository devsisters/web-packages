{
  "compilerOptions": {
    "outDir": "./",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": []
}
