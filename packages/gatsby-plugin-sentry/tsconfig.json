{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "outDir": ".",
    "rootDir": "src",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
